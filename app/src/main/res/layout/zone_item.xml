<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="@drawable/zone_border"
    android:orientation="vertical"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:text="Zóna 1"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/player_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center"
            android:textFontWeight="500"
            android:textSize="25dp" />
    </LinearLayout>

    <Button
        android:id="@+id/substitute"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Střídání"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/select_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/set_to_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Vybrat ze sestavy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/service_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Podání"
                android:textSize="20dp" />

            <Button
                android:id="@+id/service_ace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eso" />

            <Button
                android:id="@+id/service_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Příjmutý" />

            <Button
                android:id="@+id/service_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zkažený" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attack_block_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/attack_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Útok"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/attack_hit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bod" />

                <Button
                    android:id="@+id/attack_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Příjmutý" />

                <Button
                    android:id="@+id/attack_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chyba" />

                <Button
                    android:id="@+id/attack_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zablokovaný" />
            </LinearLayout>

            <View
                android:id="@+id/attack_block_separator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/block_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blok"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/block_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bod" />

                <Button
                    android:id="@+id/block_no_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Úspěšný" />

                <Button
                    android:id="@+id/block_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chyba" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reception_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Příjem podání"
                android:textSize="20dp" />

            <Button
                android:id="@+id/reception_ideal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ideální" />

            <Button
                android:id="@+id/reception_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokračujeme" />

            <Button
                android:id="@+id/reception_no_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nepokračujeme" />

            <Button
                android:id="@+id/reception_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chyba" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>