<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.matchchooser.MatchStatistics">


    <FrameLayout
        android:id="@+id/match_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seznam zápasů"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30dp"/>

            <Button
                android:id="@+id/to_statistics_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do statistik" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/match_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/match_statistics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistiky" />

        <Button
            android:id="@+id/to_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Na seznam" />
    </FrameLayout>

</FrameLayout>